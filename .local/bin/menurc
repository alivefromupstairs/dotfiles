#!/usr/bin/env sh

case "$(printf "zsh\\nneovim init\\nneovim plugins\\nneovim keys\\nneovim functions\\nprofile\\naliases\\nsecure aliases\\ndwm\\nst\\nlf\\nxinit\\nmpv\\nmpv input\\nsxhkd\\nzathura\\npistol\\ndunst\\nlscolors\\nzinit\\njaro\\nbang\\nhosts\\ntmux" | dmenu -l 10 -p "Open config file for:")" in
  zsh) $TERMINAL -e $EDITOR "$HOME/.config/zsh/.zshrc" ;;
  'neovim init') $TERMINAL -e $EDITOR "$HOME/.config/nvim/config/init.vim" ;;
  'neovim plugins') $TERMINAL -e $EDITOR "$HOME/.config/nvim/config/plugins.vim" ;;
  'neovim keys') $TERMINAL -e $EDITOR "$HOME/.config/nvim/config/keys.vim" ;;
  'neovim functions') $TERMINAL -e $EDITOR "$HOME/.config/nvim/config/functions.vim" ;;
  profile) $TERMINAL -e $EDITOR "$HOME/.profile" ;;
  aliases) $TERMINAL -e $EDITOR "$HOME/.config/aliasrc" ;;
  'secure aliases') $TERMINAL -e $EDITOR "$HOME/.config/securealiasrc" ;;
  dwm) $TERMINAL -e $EDITOR "$HOME/.local/src/dwm/config.h" ;;
  st) $TERMINAL -e $EDITOR "$HOME/.local/src/st/config.h" ;;
  lf) $TERMINAL -e $EDITOR "$HOME/.config/lf/lfrc" ;;
  xinit) $TERMINAL -e $EDITOR "$HOME/.xinitrc" ;;
  mpv) $TERMINAL -e $EDITOR "$HOME/.config/mpv/mpv.conf" ;;
  'mpv input') $TERMINAL -e $EDITOR "$HOME/.config/mpv/input.conf" ;;
  sxhkd) $TERMINAL -e $EDITOR "$HOME/.config/sxhkd/sxhkdrc" ;;
  zathura) $TERMINAL -e $EDITOR "$HOME/.config/zathura/zathurarc" ;;
  pistol) $TERMINAL -e $EDITOR "$HOME/.config/pistol/pistol.conf" ;;
  dunst) $TERMINAL -e $EDITOR "$HOME/.config/dunst/dunstrc" ;;
  lscolors) $TERMINAL -e $EDITOR "$HOME/.config/LS_COLORS" ;;
  zinit) $TERMINAL -e $EDITOR "/home/me/.config/zsh/.zinitplugins" ;;
  jaro) $TERMINAL -e $EDITOR "$HOME/.config/associations" ;;
  bang) $TERMINAL -e $EDITOR "$HOME/.config/bangs.yaml" ;;
  hosts) $TERMINAL -e sudo vim "/etc/hosts" ;;
  tmux) $TERMINAL -e $EDITOR "$HOME/.config/tmux/tmux.conf" ;;
esac

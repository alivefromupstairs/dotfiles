#!/usr/bin/env sh

case "$(printf "zsh\\nneovim init\\nneovim plugins\\nneovim keys\\nneovim functions\\nprofile\\naliases\\nsecure aliases\\ndwm\\nst\\nlf\\nxinit\\nmpv\\nmpv input\\nsxhkd\\nzathura\\npistol\\ndunst\\nlscolors\\nzinit\\njaro\\nbang\\nhosts\\ntmux" | dmenu -l 10 -p "Open config file for:")" in
  zsh) $TERMINAL -e $EDITOR "$HOME/.config/zsh/.zshrc" >/dev/null 2>&1 & ;;
  'neovim init') $TERMINAL -e $EDITOR "$HOME/.config/nvim/config/init.vim" >/dev/null 2>&1 & ;;
  'neovim plugins') $TERMINAL -e $EDITOR "$HOME/.config/nvim/config/plugins.vim" >/dev/null 2>&1 & ;;
  'neovim keys') $TERMINAL -e $EDITOR "$HOME/.config/nvim/config/keys.vim" >/dev/null 2>&1 & ;;
  'neovim functions') $TERMINAL -e $EDITOR "$HOME/.config/nvim/config/functions.vim" >/dev/null 2>&1 & ;;
  profile) $TERMINAL -e $EDITOR "$HOME/.profile" >/dev/null 2>&1 & ;;
  aliases) $TERMINAL -e $EDITOR "$HOME/.config/aliasrc" >/dev/null 2>&1 & ;;
  'secure aliases') $TERMINAL -e $EDITOR "$HOME/.config/securealiasrc" >/dev/null 2>&1 & ;;
  dwm) $TERMINAL -e $EDITOR "$HOME/.local/src/dwm/config.h" >/dev/null 2>&1 & ;;
  st) $TERMINAL -e $EDITOR "$HOME/.local/src/st/config.h" >/dev/null 2>&1 & ;;
  lf) $TERMINAL -e $EDITOR "$HOME/.config/lf/lfrc" >/dev/null 2>&1 & ;;
  xinit) $TERMINAL -e $EDITOR "$HOME/.xinitrc" >/dev/null 2>&1 & ;;
  mpv) $TERMINAL -e $EDITOR "$HOME/.config/mpv/mpv.conf" >/dev/null 2>&1 & ;;
  'mpv input') $TERMINAL -e $EDITOR "$HOME/.config/mpv/input.conf" >/dev/null 2>&1 & ;;
  sxhkd) $TERMINAL -e $EDITOR "$HOME/.config/sxhkd/sxhkdrc" >/dev/null 2>&1 & ;;
  zathura) $TERMINAL -e $EDITOR "$HOME/.config/zathura/zathurarc" >/dev/null 2>&1 & ;;
  pistol) $TERMINAL -e $EDITOR "$HOME/.config/pistol/pistol.conf" >/dev/null 2>&1 & ;;
  dunst) $TERMINAL -e $EDITOR "$HOME/.config/dunst/dunstrc" >/dev/null 2>&1 & ;;
  lscolors) $TERMINAL -e $EDITOR "$HOME/.config/LS_COLORS" >/dev/null 2>&1 & ;;
  zinit) $TERMINAL -e $EDITOR "/home/me/.config/zsh/.zinitplugins" >/dev/null 2>&1 & ;;
  jaro) $TERMINAL -e $EDITOR "$HOME/.config/associations" >/dev/null 2>&1 & ;;
  bang) $TERMINAL -e $EDITOR "$HOME/.config/bangs.yaml" >/dev/null 2>&1 & ;;
  hosts) $TERMINAL -e sudoedit "/etc/hosts" >/dev/null 2>&1 & ;;
  tmux) $TERMINAL -e $EDITOR "$HOME/.config/tmux/tmux.conf" >/dev/null 2>&1 & ;;
esac

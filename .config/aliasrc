#!/usr/bin/env sh

alias sudo="sudo "
alias setsid="setsid "

alias open="xdg-open"
alias o="<"

alias dot='/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME'
alias dottig='GIT_DIR=$HOME/.dotfiles GIT_WORK_TREE=$HOME tig'

alias cp="cp -i"                                                # Confirm before overwriting something
alias df='df -h'                                                # Human-readable sizes
alias free='free -m'                                            # Show sizes in MB


alias -s {ape,avi,flv,m4a,mkv,mov,mp3,mp4,mpeg,mpg,ogg,ogm,wav,webm}=mpv
alias -s {jpg,jpeg,png,mng,tiff,tif,xpm}=$XIVIEWER
alias -s {htm,html,de,org,net,com,at,cx,nl,se,dk}=$BROWSER
alias -s {cpp,cxx,cc,c,hh,h,inl,asc,md,txt,TXT,tex,conf,config}=nvim
alias -s pdf="zathura"
alias -s gif="$XIVIEWER -a"

alias refresh="source $HOME/.config/zsh/.zshrc && source $HOME/.profile"

alias ls='exa -1 --group-directories-first'
alias ll='exa -l --git --group-directories-first'
alias la='exa -la --git --group-directories-first'
alias ping="prettyping"

alias pac="sudo pacman -S --needed"
alias pacs="sudo pacman -Ss"
alias pacy="sudo pacman -Sy"
alias pacyu="sudo pacman -Syu"
alias pacr="sudo pacman -R"
alias pacrns="sudo pacman -Rns"

alias aur="yay -S --needed --noconfirm"
alias aurs="yay -Ss"
alias aury="yay -Sy"
alias auryu="yay -Syu --devel"
alias auryun="yay -Syu --devel --noconfirm"
alias aurr="yay -R"
alias aurrns="yay -Rns --noconfirm"

alias aria="aria2c -x8 --allow-overwrite"
alias connected="ping -c 2 google.com"
alias fan-status="bat -p /proc/acpi/ibm/fan"
alias c.="code . && exit"
alias peerflix="peerflix -kd"
alias rename-2-kebabcase="node ~/build/rename-2-kebabcase/index.js"
alias toggle-hc="sudo hostctl toggle -q --wait 0 -p"
alias disable-hc="sudo hostctl enable -q -p"
alias enable-hc="sudo hostctl disable -q -p"
alias hc="hostctl"

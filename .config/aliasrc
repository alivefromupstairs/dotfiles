alias vuedotfiles="aria2c -Z --allow-overwrite 'https://raw.githubusercontent.com/alivefromupstairs/config-files/master/vscode/vue/.prettierrc.js' 'https://raw.githubusercontent.com/alivefromupstairs/config-files/master/vscode/vue/.eslintrc.js'; mkdir .vscode; cd ./.vscode; aria2c --allow-overwrite 'https://raw.githubusercontent.com/alivefromupstairs/config-files/master/vscode/vue/.vscode/pug-html.code-snippets'"
alias gridsomedotfiles="yarn add eslint eslint-config-prettier eslint-plugin-gridsome vue-eslint-parser; aria2c -Z --allow-overwrite 'https://raw.githubusercontent.com/alivefromupstairs/config-files/master/vscode/gridsome/.eslintrc.js' 'https://raw.githubusercontent.com/alivefromupstairs/config-files/master/vscode/gridsome/.prettierrc.js'"


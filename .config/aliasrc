############
# Commands #
############

alias zshrcs="source ~/.zshrc"

alias dwmmake="cd ~/build/dwm/ ;sudo make clean install; cd -"

alias ls='exa -1 --group-directories-first'
alias ll='exa -l --git --group-directories-first'
alias la='exa -la --git --group-directories-first'

alias pac="sudo pacman -S --needed"
alias pacs="sudo pacman -Ss"
alias pacy="sudo pacman -Sy"
alias pacyu="sudo pacman -Syu"
alias pacr="sudo pacman -R"
alias pacrns="sudo pacman -Rns"

alias aur="yay -S --needed"
alias aurs="yay -Ss"
alias aury="yay -Sy"
alias auryu="yay -Syu"
alias aurr="yay -R"
alias aurrns="yay -Rns"

alias batt="acpi -b"
alias aria="aria2c -x8 --allow-overwrite"
alias connected="ping google.com"
alias fan-status="bat -p /proc/acpi/ibm/fan"
alias c="code"
alias peerflix="peerflix -kd"
alias ncm="ncmpcpp"
alias ffrec="ffmpeg -y -f x11grab -s 1366x768 -i :0.0 out.mkv"
alias screenshottoclipboard="import png:- | xclip -selection clipboard -t image/png"

alias config='/usr/bin/git --git-dir=$HOME/dotfiles --work-tree=$HOME'

alias yamete="docker run --rm -ti -v ~/media/books/.x:/app/downloads -u 1000:1000 jaymoulin/yamete download -p -u"
alias yamete-list="docker run --rm -ti -v ~/media/books/.x:/app/downloads -v ~/.buffers/yamete:/app/list -u 1000:1000 jaymoulin/yamete download -p -l /app/list"
alias yamete-load='echo $(xclip -selection primary -o) >> ~/.buffers/yamete'

alias unix="~/.rice/unix"


set guioptions                 none       # remove statusbar
set font "Iosevka 9"
set adjust-open "width"

#set scroll-page-aware "true"
##set scroll-full-overlap 2
#set scroll-step 50

set notification-error-bg       "#ffffff"  # bg
set notification-error-fg       "#cc3833"  # bright:red
set notification-warning-bg     "#ffffff"  # bg
set notification-warning-fg     "#d75f5f"  # bright:yellow
set notification-bg             "#ffffff"  # bg
set notification-fg             "#7fa110"  # bright:green

set completion-bg               "#dddddd"  # bg2
set completion-fg               "#3c3c3c"  # fg
set completion-group-bg         "#eeeeee"  # bg1
set completion-group-fg         "#928374"  # gray
set completion-highlight-bg     "#4ea5f2"  # bright:blue
set completion-highlight-fg     "#dddddd"  # bg2

# Define the color in index mode
set index-bg                    "#dddddd"  # bg2
set index-fg                    "#3c3c3c"  # fg
set index-active-bg             "#4ea5f2"  # bright:blue
set index-active-fg             "#dddddd"  # bg2

set inputbar-bg                 "#ffffff"  # bg
set inputbar-fg                 "#3c3c3c"  # fg

set statusbar-bg                "#dddddd"  # bg2
set statusbar-fg                "#3c3c3c"  # fg

set highlight-color             "#67b5a5"  # bright:yellow
set highlight-active-color      "#d75f5f"  # bright:orange

set default-bg                  "#000000"  # bg
set default-fg                  "#3c3c3c"  # fg
set render-loading              true
set render-loading-bg           "#ffffff"  # bg
set render-loading-fg           "#3c3c3c"  # fg

# Recolor book content's color
set recolor-lightcolor          "#000000"  # bg
set recolor-darkcolor           "#ffffff"  # fg
#set recolor                     "true"
set recolor-keephue             false       # keep original color
set recolor-reverse-video       "true"

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 0

set incremental-search           "true"    # search on keystroke
set selection-clipboard          clipboard # use primary clipboard
#set show-scrollbars true

map D                            toggle_page_mode
map r                            reload
map R                            rotate
map i                            recolor
map p                            print
